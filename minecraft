from ursina import *
from ursina.prefabs.first_person_controller import FirstPersonController
app = Ursina()

grass_texture = load_texture('textures/grass_block.png')
stone_texture = load_texture('textures/stone_block.png')
brick_texture = load_texture('textures/brick_block.png')
dirt_texture = load_texture('textures/dirt_block.png')

class Player(Entity):
    def update(self):
        self.direction = Vec3(self.right * (held_keys['d'] - held_keys['a'])).normalized()
        self.position += self.direction * 5 * time.dt

class Voxel(Button):
    def __init__(self, position = (0,0,0), texture=grass_texture):
        super().__init__(parent=scene,
        position = position,
        model = "textures/block",
        origin_y = 0.5,
        texture = texture,
        color = color.color(0,0,random.uniform(0.9,1)),
        scale = 0.5
        )

for z in range(20):
    for x in range(20):
        voxel = Voxel(position=(x,0,z))
player = FirstPersonController()

app.run()
